@using System.Reflection
@{
    ViewBag.Title = "Release history - DataShare";
}

@section TitleContent
{
    DataShare release history
}
<!-- Current Version @Assembly.GetAssembly(typeof(DS.WebUI.MvcApplication)).GetName().Version.ToString() -->
<div class="container_16">    
    <div class="grid_10">

        <h3>Release notes</h3>
        <dl>
            <dt>November 2014 - version 1.5</dt>
            <dd>
                <ul>
                    <li>Administrative boundary added to map views.</li>
                    <li>Administrative enhancements.</li>
                    <li>Bug fixes.</li>
                </ul>
                <hr />
            </dd>

            <dt>June 2014 - version 1.4</dt>
            <dd>
                <ul>
                    <li>Standardised classification of data sets.</li>
                    <li>Improvements to developer API.</li>
                    <li>Ability to import data set definitions from other DataShare instances.</li>
                    <li>Integration with <a href="http://data.gov.uk">data.gov.uk</a></li>
                </ul>
                <hr />
            </dd>
            <dt>October 2013 - version 1.3</dt>
            <dd>
                <ul>
                    <li>Open source mapping.</li>
                    <li>Bug fixes.</li>
                </ul>
                <hr />
            </dd>
            
            <dt>May 2011 - version 1.2</dt>
            <dd>
                <ul>
                    <li>Data visualisations.</li>
                    <li>Ability to search for data sets.</li>
                </ul>
                <hr />
            </dd>
            <dt>March 2011 - version 1.1</dt>
            <dd>
                <ul>
                    <li>View open data sets online.</li>
                    <li>Sort and filter data.</li>
                    <li>Add/remove columns.</li>
                    <li>Download filtered data.</li>
                    <li>Data sets are able to include linked data via URIs.</li>
                    <li>Enriched developer API.</li>
                </ul>
                <hr />
            </dd>
            
            <dt>January 2011 - version 1.0</dt>
            <dd>
                <ul>
                    <li>Categorisation of data sets.</li>
                    <li>Download open data files.</li>
                    <li>Simple URL driven API.</li>
                </ul>
            </dd>
        </dl>

    </div>
    <div class="grid_6 center">
        <img src="../../Content/images/big/arrow.jpg" alt="A big arrow" />
    </div>
</div>
