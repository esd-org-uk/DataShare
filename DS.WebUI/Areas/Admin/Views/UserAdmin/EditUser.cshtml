@model DS.Domain.EditUserModel
@{
    ViewBag.Title = "Users - User admin - DataShare";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

@section TitleContent
{
    Edit DataShare user
}

<div class="container_16">
    <div class="grid_16">
        @Html.Raw(ViewBag.Message)        
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <fieldset>
                @Html.ValidationMessageFor(model => model.UserName)
                <div class="editor-field">
                    @Html.LabelFor(model => model.UserName)
                    @Html.HiddenFor(model => model.UserName)
                    <div class="text-display">@Html.DisplayFor(model => model.UserName)</div>
                </div>
                @Html.ValidationMessageFor(model => model.Email)
                <div class="editor-field">
                    @Html.LabelFor(model => model.Email)
                    @Html.EditorFor(model => model.Email)
                    <span class="helptext">The user's email address.</span>
                </div>
                @Html.ValidationMessageFor(model => model.Password)
                <div class="editor-field">
                    @Html.LabelFor(model => model.Password)
                    @Html.EditorFor(model => model.Password)
                    <span class="helptext">The user's password.</span>
                </div>
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                <div class="editor-field">
                    @Html.LabelFor(model => model.ConfirmPassword)
                    @Html.EditorFor(model => model.ConfirmPassword)
                    <span class="helptext">Please confirm the password.</span>
                </div>
                @Html.ValidationMessageFor(model => model.Role)
                <div class="editor-field">
                    @Html.LabelFor(model => model.Role)
                    @Html.DropDownListFor(model => model.Role, new SelectList(new[] { "Uploader","SchemaEditor","SchemaCreator","SuperAdministrator" }))
                    <span class="helptext">Select the role this user will perform.</span>
                </div>
                <p>
                    <input type="submit" class="green large button submit" value="Update" />
                </p>
            </fieldset>
            
        }
    </div>
</div>

